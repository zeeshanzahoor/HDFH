<%= form_for(@match, :url=>'/admin/editmatch', :method=>'post') do |f| %>
    <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
            <label>Competition</label>
            <%= f.select(:CompetitionId, Competition.all.map {|c| [c.Name, c.id]},{},{ :class => 'form-control'}) %>
        </div>
        <div class="form-group">
            <label>Home Team</label>
            <%= f.select(:HomeTeamId, Team.all.map{|t| [t.Name, t.id]}, {}, {:class=>'form-control'} )%>
        </div>
        <div class="form-group">
            <label>Away Team</label>
            <%= f.select(:AwayTeamId, Team.all.map {|t| [t.Name, t.id]}, {}, {:class=>'form-control'}) %>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">
        <div class="form-group">
            <label>Score</label>
            <%= f.text_field(:Score, :class => 'form-control')%>
        </div>
        <div class="form-group">
            <label>Cover Picture</label>
            <%=f.file_field(:CoverPicture, :class=>'form-control') %>
        </div>
        <div class="form-group">
            <label>Date Played</label>
            <div class="clearfix"></div>
            <%= f.date_select(:DatePlayed,:order=>[:day, :month, :year])%>
        </div>
        
    </div>

    <div class="clearfix"></div>

    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-header">
                <h4 class="widget-title lighter">Match Videos</h4>

                <div class="widget-toolbar no-border">
                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main padding-6 no-padding-left no-padding-right">
                    <%= f.fields_for :Videos do |field|%>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                <label>Title</label>
                                <%= field.text_field(:Title, :class=>'form-control')%>
                            </div>
                            <div class="form-group">
                                <label>Video Link</label>
                                <%= field.text_field(:Url, :class=>'form-control')%>
                            </div>
                            <div class="hr hr32 hr-dotted"></div>
                        </div>
                    <% end%>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div>
        <button type="submit">Post</button>
    </div>
    <%end%>